{
  "manifest_version": 2,
  "name": "Bilibili Downloader",
  "version": "1.0",
  "description": "Download Bilibili Manga Images",
  "permissions": ["downloads", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Download Bilibili Manga Images"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bilibili.downloader@mozilla.org"
    }
  }
}
